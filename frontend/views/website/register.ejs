<h1>REGISTER</h1>
<form action="<%= routes['website_register'] %>" method="POST">
  <div>
    <label>Username: </label>
    <%if ( user.displayName ) { %>
      <input type="text" name="displayName" value='<%= user.phoneNumber %>' required >
    <% }else{ %>
      <input type="text" name="displayName">
    <% } %>
  </div>

  <div>
    <label>Phone Number (Opcional): </label>
    <%if ( user.phoneNumber ) { %>
      <input type="text" name="phoneNumber" value='<%= user.phoneNumber %>' >
    <% }else{ %>
      <input type="text" name="phoneNumber">
    <% } %>
  </div>

  <div>
    <label>Email: </label>
    <%if ( user.displayName ) { %>
      <input type="email" name="email" value='<%= user.email %>' required >
    <% }else{ %>
      <input type="email" name="email">
    <% } %>
  </div>

  <div>
    <label>Password: </label>
    <input type="password" name="password">
    <%if ( user.password ) { %>
      <text><%= user.password %><br></text>
    <% } %>      
  </div>

  <div>
    <input type="submit" value="Register">
  </div>
</form>

<a href="<%= routes['website_login'] %>">Login</a>